<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow>

            <ImageView
                android:id="@+id/cameraview"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:onClick="onPopupButtonclick"
                android:scaleType="fitCenter"
                android:src="@drawable/photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffbcaf"
                    android:gravity="center"
                    android:text="상호명"
                    android:textColor="#7f7f7f"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editstoname"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#efefef"
                    android:gravity="center" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffbcaf"
                    android:gravity="center"
                    android:text="사업자 번호"
                    android:textColor="#7f7f7f"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editstonum"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:background="#efefef"
                    android:gravity="center" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#ffbcaf"
            android:gravity="center"
            android:text="상점 전화번호"
            android:textColor="#7f7f7f"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editstophone"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:background="#efefef"
            android:inputType="phone"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffbcaf"
        android:gravity="center"
        android:text="상점 정보"
        android:textColor="#7f7f7f"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editstoinfo"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:background="#efefef"
        android:hint="상점 정보를 입력하세요"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="#ffbcaf"
            android:gravity="center"
            android:text="Beacon ID"
            android:textColor="#7f7f7f"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editstobeaid"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="#efefef" />
    </LinearLayout>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="#aff0dc"
        android:text="저장"
        android:textColor="#7f7f7f" />

</LinearLayout>