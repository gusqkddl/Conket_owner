<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cameraview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        android:onClick="onPopupButtonclick"
        android:scaleType="fitCenter"
        android:src="@drawable/photo" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="#ffbcaf"
        android:gravity="center"
        android:text="사용 기간"
        android:textColor="#7f7f7f"
        android:textSize="15sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" >

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="#ffbcaf"
                android:gravity="center"
                android:text="시작일"
                android:textColor="#7f7f7f"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edityear"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="년"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editmonth"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="월"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editday"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="일"
                android:textSize="15dp" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="#ffbcaf"
                android:gravity="center"
                android:text="종료일"
                android:textColor="#7f7f7f"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edityear2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="년"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editmonth2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="월"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editday2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#efefef"
                android:inputType="number"
                android:textSize="15dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="일"
                android:textSize="15dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffbcaf"
        android:gravity="center"
        android:text="쿠폰에 들어갈 문구"
        android:textColor="#7f7f7f"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editinfo"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:background="#efefef"
        android:hint="쿠폰 정보를 작성해주세요."
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="공지하길 원하면 체크해주세요" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chpull"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="PULL 알림" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="100dp"
            android:layout_height="30dp"

            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:background="#aff0dc"
            android:text="저장"
            android:textColor="#7f7f7f" />
    </LinearLayout>

</LinearLayout>